@model LibraryManager.Areas.Admin.Models.EditViewModel

<h2>Chỉnh sửa Sách</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="OldCoverImage" value="@Model.OldCoverImage"/>
    
    <div class="form-group mb-3">
        <label asp-for="Title">Tiêu đề </label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
    </div>
    
    <div class="form-group mb-3">
        <label asp-for="AuthorId">Tác giả</label>
        <select asp-for="AuthorId" class="form-control" 
                asp-items="@(new SelectList(ViewBag.Authors, "Id", "Name", Model.AuthorId))">
        </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoryId">Thể loại</label>
        <select asp-for="CategoryId" class="form-control" 
                asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name", Model.CategoryId))">
        </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ISBN">ISBN</label>
        <input asp-for="ISBN" class="form-control" value="@Model.ISBN" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="PublishedYear">Năm xuất bản</label>
        <input asp-for="PublishedYear" class="form-control" type="number" value="@Model.PublishedYear" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Summary">Tóm tắt</label>
        <textarea asp-for="Summary" class="form-control" rows="4">@Model.Summary</textarea>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CoverImage">Ảnh bìa</label>
        <input asp-for="CoverImage" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.OldCoverImage))
        {
            <div class="mt-2">
                <img src="@Url.Content(@Model.OldCoverImage)" alt="Book Cover" style="max-width: 200px;" class="img-thumbnail" />
            </div>
        }
    </div>

    <div class="form-group mb-3">
        <label asp-for="RentalPrice">Giá thuê</label>
        <div class="input-group">
            <input asp-for="RentalPrice" class="form-control" type="number" value="@Model.RentalPrice" />
            <span class="input-group-text">VNĐ</span>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ReadingDuration">Thời gian đọc</label>
        <input asp-for="ReadingDuration" class="form-control" type="number" value="@Model.ReadingDuration" />
    </div>

    <div class="form-group">
        <label asp-for="Status">Trạng thái</label>
        <select asp-for="Status" class="form-control">
            <option value="Đã hoàn thành">Đã hoàn thành</option>
            <option value="Đang cập nhật">Đang cập nhật</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        
</form>