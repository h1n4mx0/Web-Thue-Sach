@{
    Layout = "~/Areas/User/Views/Shared/_SideBarLayout.cshtml";
}
@model LibraryManager.Areas.User.Models.ProfileViewModel

<div class="col-lg-9 col-md-12">
    <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
        <div class="dash__pad-2">
            <h1 class="dash__h1 u-s-m-b-14">Hồ sơ của tôi</h1>

            <span class="dash__text u-s-m-b-30">Xem và chỉnh sửa thông tin của bạn</span>
            <div class="row">
                <div class="col-lg-4 u-s-m-b-30">
                    <h2 class="dash__h2 u-s-m-b-8">Tên đầy đủ</h2>

                    <span class="dash__text">@Model.FullName</span>
                </div>
                <div class="col-lg-4 u-s-m-b-30">
                    <h2 class="dash__h2 u-s-m-b-8">E-mail</h2>

                    <span class="dash__text">@Model.Email</span>
                    <div class="dash__link dash__link--secondary">

                        <a href="#">Thay đổi</a></div>
                </div>
                <div class="col-lg-4 u-s-m-b-30">
                    <h2 class="dash__h2 u-s-m-b-8">Phone</h2>

                    <span class="dash__text">@Model.Phone</span>
                    <div class="dash__link dash__link--secondary">

                        <a href="#">Thay đổi</a></div>
                </div>
                <div class="col-lg-4 u-s-m-b-30">
                    <h2 class="dash__h2 u-s-m-b-8">Ngày sinh</h2>

                    <span class="dash__text">@Model.DateOfBirth</span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">

                        <a class="dash__custom-link btn--e-transparent-brand-b-2" href="/User/Dashboard/EditProfile">Thay đổi thông tin</a></div>
                    <div>

                        <a class="dash__custom-link btn--e-brand-b-2" href="#">Đổi mật khẩu</a></div>
                </div>
            </div>
        </div>
    </div>
</div>